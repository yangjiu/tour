<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:id="@+id/rdomain"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#fff"
        android:clickable="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/viplayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/viptxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/collect_vip"
                android:textColor="#959595"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#e6e6e6" />

        <LinearLayout
            android:id="@+id/prolayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/protxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/collect_project"
                android:textColor="#959595"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tabbottom"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/search02"
        android:orientation="horizontal">

        <View
            android:id="@+id/v_vip"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1.0"
            android:background="#fd5b59" />

        <View
            android:id="@+id/v_pro"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1.0"
            android:background="#fd5b59"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd" />

    <LinearLayout
        android:id="@+id/llbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/as_rl_face"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/detail_top"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/facetxt"
                style="@style/rgtextleft"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ar_iv_face"
                android:gravity="center"
                android:text="林西亚   22岁" />

            <com.joysus.jpview.RatingBarEx
                android:id="@+id/ratingBar1"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@+id/facetxt"
                android:layout_toRightOf="@+id/ar_iv_face"
                android:maxHeight="15dp"
                android:minHeight="15dp" />

            <com.joysus.jpview.CircularImage
                android:id="@+id/ar_iv_face"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:src="@drawable/face" />

            <TextView
                android:id="@+id/tvsignal"
                style="@style/rgtextleft"
                android:layout_height="50dp"
                android:layout_below="@+id/ratingBar1"
                android:layout_toRightOf="@+id/ar_iv_face"
                android:gravity="center"
                android:text="个性签名：带你一起走天涯，带你一起走天涯"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/img_description"
                    android:src="@mipmap/detail" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llright"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.joysus.jpview.CircularImage
                    android:id="@+id/imageface"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/face" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/imageface"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="林西娅" />

                            <TextView
                                android:id="@+id/tv_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="22"
                                android:textColor="#AAA" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="岁" />
                        </LinearLayout>

                        <com.joysus.jpview.RatingBarEx
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            app:clickable="false"
                            app:starDst="@mipmap/gstar"
                            app:starNumber="5"
                            app:starSrc="@mipmap/redstar"
                            app:step="0.1" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgshare"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@mipmap/share" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@mipmap/itembg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="私人飞机搭乘" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_activity_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/timetitle"
                    android:text="2016-04-20--2016-05-20" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="¥1200" />

                <TextView
                    android:id="@+id/timetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动时间：" />
            </RelativeLayout>

            <com.joysus.jpview.SeekBarEx
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="10dp"></com.joysus.jpview.SeekBarEx>

            <!--<SeekBar-->
            <!--android:id="@+id/seekBar1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_centerVertical="true" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagesc"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/index_01h" />

                <ImageView
                    android:id="@+id/tv_money"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="100dp"
                    android:src="@mipmap/index_02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已筹" />

                <TextView
                    android:id="@+id/tv_priced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥300" />

                <ImageView
                    android:id="@+id/tv_left"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/index_03" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余" />

                <TextView
                    android:id="@+id/tv_last_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.joysus.jpview.CustomViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#fff">

    </com.joysus.jpview.CustomViewPager>
</LinearLayout>