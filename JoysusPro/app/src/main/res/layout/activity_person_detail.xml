<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/common_title" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/as_rl_face"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/detail_top"
            android:layout_marginLeft="-5dp"
            android:background="#ff5b5b"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/facetxt"
                style="@style/rgtextleft"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ar_iv_face"
                android:gravity="center"
                android:text="林西亚"
                android:textColor="@color/white" />

            <com.joysus.jpview.RatingBarEx
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@+id/facetxt"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ar_iv_face"
                app:clickable="false"
                app:starDst="@mipmap/grey_star"
                app:starNumber="5"
                app:starSrc="@mipmap/yellow_star"
                app:step="0.1" />

            <TextView
                android:id="@+id/tvsignal"
                style="@style/rgtextleft"
                android:layout_height="50dp"
                android:layout_below="@+id/ratingBar"
                android:layout_toRightOf="@+id/ar_iv_face"
                android:gravity="center"
                android:text="个性签名：带你一起走天涯，带你一起走天涯"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <com.joysus.jpview.CircularImage
                android:id="@+id/ar_iv_face"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:src="@drawable/face" />

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#ff5b5b"
                android:gravity="top">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:contentDescription="@string/img_description"
                    android:src="@mipmap/aixin" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f6f6">

            <TextView
                android:id="@+id/tvbase"
                style="@style/rgtextleft"
                android:layout_height="40dp"
                android:layout_below="@+id/ratingBar"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ar_iv_face"
                android:gravity="center"
                android:text="基本资料"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D9D9D9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvshengao"
                style="@style/rgtextleft"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ar_iv_face"
                android:layout_weight="1"
                android:gravity="center"
                android:text="身高:160cm"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvtizhong"
                style="@style/rgtextleft"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ar_iv_face"
                android:layout_weight="1"
                android:gravity="center"
                android:text="体重:50kg"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvdiqu"
                style="@style/rgtextleft"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ar_iv_face"
                android:layout_weight="1"
                android:gravity="center"
                android:text="地区:南京市鼓楼区"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D9D9D9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f6f6">

            <TextView
                android:id="@+id/tvphoto"
                style="@style/rgtextleft"
                android:layout_height="40dp"
                android:layout_below="@+id/ratingBar"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ar_iv_face"
                android:gravity="center"
                android:text="个人相册"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D9D9D9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#fff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pic1"
                style="@style/rgtextleft"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ar_iv_face"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@mipmap/pic1" />

            <ImageView
                android:id="@+id/pic2"
                style="@style/rgtextleft"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ar_iv_face"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@mipmap/pic2" />

            <ImageView
                android:id="@+id/pic3"
                style="@style/rgtextleft"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ar_iv_face"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@mipmap/pic3" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D9D9D9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f6f6">

            <TextView
                android:id="@+id/tv_release_activity"
                style="@style/rgtextleft"
                android:layout_height="40dp"
                android:layout_below="@+id/ratingBar"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ar_iv_face"
                android:gravity="center"
                android:text="发布活动"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D9D9D9" />

        <ListView
            android:id="@+id/lv_mypro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

</ScrollView>